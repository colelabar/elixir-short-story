<h2>Show post</h2>

<ul>

  <li>
    <strong>User:</strong>
    <%= @post.user_id %>
  </li>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @post.content %>
  </li>


</ul>

<div class="newPost">
  <%= link "Edit", to: post_path(@conn, :edit, @post) %>
</div>
<div class="newPost">
  <%= link "Comment", to: comment_path(@conn, :new) %>
</div>
<div class="newPost">
  <%= link "Back", to: post_path(@conn, :index) %>
</div>
